<div class="background">&nbsp;</div>

<div class="wrapper">

<h2>Hi <%= @raver.name %></h2>

  <% if @raver.trips.length == 0 %>
    <%= render 'layouts/trip' %>

  <% else %>
    <button class='new-rave'>
      <h3>Plan new rave</h3>
    </button>

    <h3>Current raves:</h3>
    <section class='current-trips'>
    <% @trips.each do |trip| %>
      <%= trip.from_airport %>
    <% end %>
    </section>

  <% end %>


</div> <!-- wrapper -->
